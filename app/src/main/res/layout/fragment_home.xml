<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ar.edu.itba.hci.hoh.ui.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorite_devices_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_spacing"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorFragmentSubtitle"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="@string/title_favorite_devices"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/left_arrow_favorite_devices"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_white_24dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:contentDescription="@string/left_arrow_description"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_favorite_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toStartOf="@id/right_arrow_favorite_devices"
                android:layout_toEndOf="@id/left_arrow_favorite_devices">
            </androidx.recyclerview.widget.RecyclerView>

            <ImageButton
                android:id="@+id/right_arrow_favorite_devices"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:contentDescription="@string/right_arrow_description"/>
        </RelativeLayout>

        <include android:id="@+id/empty_fav_devices_card"
            layout="@layout/item_no_elements" />

        <include android:id="@+id/fav_devices_loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_loading"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/favorite_rooms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorFragmentSubtitle"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="@string/title_favorite_rooms"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/left_arrow_favorite_rooms"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_white_24dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:contentDescription="@string/left_arrow_description"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_favorite_rooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toStartOf="@id/right_arrow_favorite_rooms"
                android:layout_toEndOf="@id/left_arrow_favorite_rooms">
            </androidx.recyclerview.widget.RecyclerView>

            <ImageButton
                android:id="@+id/right_arrow_favorite_rooms"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:contentDescription="@string/right_arrow_description"/>
        </RelativeLayout>

        <include android:id="@+id/empty_fav_rooms_card"
            layout="@layout/item_no_elements" />

        <include android:id="@+id/fav_rooms_loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_loading"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/favorite_routines_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorFragmentSubtitle"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:text="@string/title_favorite_routines"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/left_arrow_favorite_routines"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_left_white_24dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:contentDescription="@string/left_arrow_description"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_favorite_routines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toStartOf="@id/right_arrow_favorite_routines"
                android:layout_toEndOf="@id/left_arrow_favorite_routines">
            </androidx.recyclerview.widget.RecyclerView>

            <ImageButton
                android:id="@+id/right_arrow_favorite_routines"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_white_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:contentDescription="@string/right_arrow_description"/>
        </RelativeLayout>

        <include android:id="@+id/empty_fav_routines_card"
            layout="@layout/item_no_elements"/>

        <include android:id="@+id/fav_routines_loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_loading"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>