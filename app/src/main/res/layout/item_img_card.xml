<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_spacing"
    android:layout_marginTop="@dimen/card_spacing"
    android:layout_marginRight="@dimen/card_spacing"
    android:layout_marginBottom="@dimen/card_spacing"
    app:cardBackgroundColor="@color/colorImgCardBackground"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_item_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/img_card_height"
            android:contentDescription="@string/img_default_description" />


        <TextView
            android:id="@+id/card_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorImgCardTitle"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="2dp"
            android:layout_margin="2dp"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>