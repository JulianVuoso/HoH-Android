<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorDevCardBackgroundLight"
        app:cardElevation="@dimen/cardElevation">

        <LinearLayout
            android:id="@+id/dialog_oven_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <include layout="@layout/dialog_device_header"/>

            <LinearLayout
                android:id="@+id/speaker_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/music_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_italic"
                            android:text="@string/device_status_playing"
                            android:textColor="@color/colorDevCardContent"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_italic"
                            android:textColor="@color/colorDevCardContentFaded"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/song"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/colorDevCardContent"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/artist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_italic"
                            android:textColor="@color/colorDevCardContentFaded"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/ic_playlist_add_black_60dp"
                        android:contentDescription="@string/playlist_add_description" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/prev"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:src="@drawable/ic_skip_previous_black_80dp"
                        android:contentDescription="@string/previous_song_description" />
                    <ImageButton
                        android:id="@+id/pause_play"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:src="@drawable/ic_pause_circle_filled_black_80dp"
                        android:contentDescription="@string/play_pause_description" />
                    <ImageButton
                        android:id="@+id/next"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:src="@drawable/ic_skip_next_black_80dp"
                        android:contentDescription="@string/next_song_description" />
                    <ImageButton
                        android:id="@+id/stop"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:src="@drawable/ic_stop_black_60dp"
                        android:contentDescription="@string/stop_description" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/device_dialog_volume"
                    android:textColor="@color/colorDevCardContent"
                    android:textSize="20sp"
                    android:textStyle="italic" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <SeekBar
                        android:id="@+id/speaker_volume_bar"
                        android:layout_width="@dimen/speaker_vol_bar_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:progressBackgroundTint="@color/colorPrimary"
                        android:progressTint="@color/colorPrimary"
                        android:thumbTint="@color/colorPrimary" />
                    <TextView
                        android:id="@+id/speaker_volume_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/colorDevCardContent"
                        android:textSize="20sp"
                        android:textStyle="italic" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:text="@string/device_dialog_genre"
                    android:textColor="@color/colorDevCardContent"
                    android:textSize="20sp"
                    android:textStyle="italic" />
                <Spinner
                    android:id="@+id/genre_selector"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.core.widget.NestedScrollView>